<h1 class="title">分類列表</h1>

<%= link_to "新增分類", new_admin_category_path, class: "button" %>

<article class="message">
  <div class="message-body">tips: 可用拖拉改變分類順序</div>
</article>

<table class="table is-fullwidth has-shadowed"  >
  <thead>
    <th>名稱</th>
    <th></th>
  </thead>
  <tbody class="list-group" >
    <% @categories.each do |category| %>

      <tr class="list-group-item" data-item="<%= dom_id(category) %>">
        <td><i class="fas fa-ellipsis-h"></i> <%= link_to category.name, edit_admin_category_path(category) %>  </td>
        <td><%= link_to "刪除", admin_category_path(category), method: :delete, data: {confirm: "是否刪除分類?"}, class: "button is-danger is-small" %></td>
      </tr>
  
    <% end %>
  </tbody>
</table>