<section class="container">
  <h1 class="title">購物車
  <%= link_to cart_path, method: :delete, data: { confirm: "確定清空購物車?"}, class:"is-size-5"  do %>
<i class="far fa-trash-alt"></i>
<span >清空購物車</span>
<% end %>
  </h1>

  <% if current_cart.empty? %>
  <h1 class="title is-size-6">購物車為空的</h1>
  <%= link_to "繼續選購", root_path, class: "button is-medium" %>
  <% else %>
    <table class="table is-fullwidth">
      <thead>
        <tr>
          <th>品項</th>
          <th>單價</th>
          <th>數量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% current_cart.items.each do |item| %>
          <tr>
            <td><%= item.product.name %></td>
            <td><%= item.product.sell_price %></td>
            <td><%= item.quantity %></td>
            <td><%= item.total_price %></td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="3">總價</td>
          <td ><%= current_cart.total_price %></td>
        </tr>
      </tfoot>
    </table>
  <%= link_to "繼續選購", root_path, class: "button is-medium" %>
  <%= link_to "準備結帳", '#', class: "button is-danger is-medium" %>
    <% end %>
</section>